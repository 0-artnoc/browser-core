<a class="result" href="{{ url }}">
    {{> partials/logo}}
    {{> partials/abstract}}
</a>

{{> partials/buttons}}

{{#if subResult}}
    <a class="result soccer-title" href="{{subResult.url}}">
        <span class="padded">{{subResult.title}}</span>
        <span class="soccer-domain divider">â€”</span>
        <span class="soccer-domain">{{ local 'soccer-api-provider' }}</span>
    </a>
{{/if}}
<div class="padded">
    <div class="soccer">
        <div class="wrapper dropdown-tabs">
            <div class="background-placeholder"></div>
            {{#if groupTableHeader}}
                <label class="dropdown-tab-label">{{groupTableHeader}}</label>
            {{/if}}
            {{#each ligaEZGroup}}
                <input class="tab-radio-input" type="radio" name="tabs" id="tab-{{@index}}" {{#if @first}}checked="checked"{{/if}}/>
                <label class="dropdown-tab-label" for="tab-{{@index}}" onclick="(function(e) {
                document.getElementById('tab-{{@index}}').checked = 'checked';
                e.preventDefault(); e.stopPropagation(); })(event)">{{groupName}}</label>
            {{/each}}
            {{#each ligaEZGroup}}
                <div id="tab-block-{{@index}}"
                     class="tab-block"
                >
                    {{#with ligaEZTable}}
                        {{> partials/liga-table}}
                    {{/with}}
                </div>
            {{/each}}
        </div>
        <div>
            {{#if expandButton.show}}
                <a class="result expand-btn" href="{{expandButton.url}}">
                    {{local expandButton.title}}
                </a>
            {{/if}}

            <a class="result powered-by" href="{{poweredByResult.url}}">
                {{local poweredByResult.title}}
            </a>
        </div>
        {{> partials/news-injection}}
    </div>
</div>
