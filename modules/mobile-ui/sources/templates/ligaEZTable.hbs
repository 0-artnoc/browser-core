<!-- ligaEZTable.tpl -->
{{#with data}}
    <section class="secondary">
        <div class="ez-liga-tableHeader">
          {{#each groups}}
            <table>
              {{#if group}}
                <thead>
                    <th></th>
                    <th>{{group}}</th>
                </thead>
              {{/if}}

              <tbody>
                  <tr class="group-section">
                    <td></td>
                    <td>Mannschaft</td>
                    <td class="small">SP</td>
                    <td class="small">TD</td>
                    <td class="small bold">PKT</td>
                  </tr>
                  {{#each ranking}}
                  <tr class="ranking-section">
                      <td class="ranks">{{rank}}.</td>
                      <td class="team-name">{{club}}</td>
                      <td class="small">{{SP}}</td>
                      <td class="small">{{TD}}</td>
                      <td class="small bold">{{PKT}}</td>
                  </tr>
                  {{/each}}
              </tbody>
            </table>
          {{/each}}
          {{> subscribe-button league}}
        </div>
    </section>
{{/with}}
{{>poweredby-kicker}}


<!-- end ligaEZTable.tpl -->
