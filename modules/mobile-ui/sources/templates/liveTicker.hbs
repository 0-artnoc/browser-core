<!-- liveTicker.tpl -->
{{#with data}}
    <div class="bundesliga">
        {{#each matches }}
            <h2>{{ data.spielTag }} {{ this.date }}</h2>

            <div class="card__incard cf">
                {{#each this.matches }}

                    <div class="card__incard__item">

                        <div class="card__incard__content" url="{{live_url}}">
                            <div>
                              <h4>
                                  {{ this.HOST }}
                              </h4>
                              <div class="score">
                                  {{ this.scored }}
                                  <span>
                                    {{#if this.gameTime}}
                                      {{#if isScheduled}}
                                        ({{this.gameTime}})
                                      {{/if}}
                                    {{/if}}
                                  </span>
                                  <div class="live-indicator {{class}}">
                                  </div>
                              </div>
                              <h4>
                                  {{ this.GUESS }}
                              </h4>
                            </div>
                            {{> subscribe-button }}
                        </div>
                    </div>
                {{/each}}

            </div>
        {{/each}}
        {{> subscribe-button league }}
    </div>
{{/with}}
{{>poweredby-kicker}}
<!-- end liveTicker.tpl -->
